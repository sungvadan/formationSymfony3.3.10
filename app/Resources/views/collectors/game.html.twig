{% extends '@WebProfiler/Profiler/layout.html.twig' %}

{% block toolbar %}
    {% if collector.game %}
        {% set icon %}
            {{ include('@WebProfiler/Icon/config.svg') }}
            <span class="sf-toolbar-value">{{ collector.game.word|upper }}</span>
        {% endset %}

        {% set text %}
            <div class="sf-toolbar-info-piece">
                <b>Tried letters</b>
                <span class="sf-toolbar-status sf-toolbar-status-green">
                    {% for letter in collector.game.triedLetters %}
                        {{ letter|upper }}
                    {% endfor %}
                </span>
            </div>
        {% endset %}

        {{ include('@WebProfiler/Profiler/toolbar_item.html.twig', { link: profiler_url }) }}
    {% endif %}
{% endblock %}

{% block menu %}
    <span class="label label-status-green">
        <span class="icon">{{ include('@WebProfiler/Icon/translation.svg') }}</span>
        <strong>Hangman</strong>
    </span>
{% endblock %}

{% block panel %}
        <h2>Hangman</h2>
{% endblock %}
